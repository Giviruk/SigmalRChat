@model ChatSignalR.Models.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div style="align-content: center;position: relative">
<h2 style="align-content: center">Вход на сайт</h2>

<a href="~/Account/WelcomePage">Back to main </a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" style="align-content: center;width: 300px;height: 100px">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div >
        <div class="form-group">
            <label asp-for="Email">Введите Email</label><br/>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/><br/>
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/><br/>
        </div>
        <div class="form-group">
            @*<input type="submit" value="Войти" class="btn" />*@
            <a href="~/Account/Index">
                <input type="submit" value="Войти"/>
            </a>
        </div>
    </div>
</form>
</div>